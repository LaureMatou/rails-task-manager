<h1>My tasks</h1>
<% @tasks.each do |task| %>
<p><%= task[:completed] == false ? '❌' : '✅' %>
  <%= link_to "#{task.title}", task_path(task.id)  %>
  <%= link_to "🗑️", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<% end %></p>
<p><%= link_to "➕ Add a new Task", new_task_path %></p>
